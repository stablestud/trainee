#include <iostream>

using namespace std;

class Class {
public:
        static char value;

        Class() { value++; };
        ~Class () { value++; };

        //insert code here, to generate the output "abcd"

        void print() { cout << value;}
};

char Class::value = 'a';

int main () {
        Class a,*b;
        b = new Class();

        b‑>set('a');
        b‑>print();

        delete b;
        a.print();

        a.set('c');
        a.print();

        a.set();
        a.print();

return 0;
}
